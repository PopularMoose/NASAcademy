@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> courses.
        <br />You can <b>nook</b> and <b>leave</b> the free ones, too!
    </p>
    <p class="lead mt-1">
        You can also see <b>all users and teachers</b> and <b>all booked ones</b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Course" asp-action="All"
       class="btn btn-primary btn-lg">All Courses</a>
    <a asp-area="" asp-controller="Course" asp-action="Add"
       class="btn btn-primary btn-lg">Add Course</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Course" asp-action="Mine"
       class="btn btn-primary btn-lg">My Courses</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Booked" asp-action="All"
       class="btn btn-primary btn-lg">All Booked</a>
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
</div>
